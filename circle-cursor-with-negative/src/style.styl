body {
  height 100vh;
  margin: 0;
  cursor:none;
  background black;
  font-family sans-serif;
  font-size:4em;
  color:white;
  
  section {
    display flex;
    width: 100%;
    height: 100%;
    justify-content center;
    align-items center;
    
    a {
      transition:transform 500ms ease;
      
      &:hover {
        transform:scale(1.6);
      }
    }
  }
  
  .cursor {
    pointer-events: none;
    
    &__circle {
      position: fixed;
      top: 0;
      left: 0;
      mix-blend-mode: difference;
      z-index: 1000;
      
      circle {
        fill:white;
      }
    }
  }
}